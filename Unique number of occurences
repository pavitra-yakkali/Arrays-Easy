class Solution {
    public boolean uniqueOccurrences(int[] arr) {
        int n = arr.length;

        // Count frequencies
        HashMap<Integer, Integer> hm = new HashMap<>();
        for (int i = 0; i < n; i++) {
            int temp = hm.getOrDefault(arr[i], 0);
            hm.put(arr[i], temp + 1);
        }

        // Store frequencies in a set
        HashSet<Integer> set = new HashSet<>(hm.values());

        // If set size == map size â†’ all counts were unique
        return set.size() == hm.size();
    }
}
